  //     },
  //     "permission": {
  //       "edit": "deny",
  //       "bash": {
  //         "*": "ask",
  //         "pwd": "allow",
  //         "whoami": "allow",
  //         "uname*": "allow",
  //         "date*": "allow",
  //         "ls*": "allow",
