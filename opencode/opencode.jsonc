{
  "$schema": "https://opencode.ai/config.json",
  
  "mcp": {
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey={env:EXA_API_KEY}&tools=web_search_exa,crawling_exa,company_research_exa,get_code_context_exa"
    }
  },

  // Optional: set once youâ€™ve picked a favorite via /models.
  // "model": "opencode/gpt-5.1-codex",

  "autoupdate": true,

  // ---------------------------------------------------------------------------
  // 2) Permissions (recommended starter baseline)
  // ---------------------------------------------------------------------------
  // "ask" will prompt you before executing.
  // Note: "edit" governs *all* file modifications (edit/write/patch/multiedit).
  "permission": {
    "webfetch": "deny",
    "websearch": "deny",

    "web_search_exa": "allow",
    "crawling_exa": "allow",
    "get_code_context_exa": "allow",

    "question": "allow",
    "todowrite": "allow",
    "todoread": "allow",

    "edit": "ask",
    "bash": "ask"
  },

  // ---------------------------------------------------------------------------
  // 3) Plugins
  // ---------------------------------------------------------------------------
  "plugin": [
    // "opencode-helicone-session"
    // "@my-org/custom-plugin"
  ],

  // ---------------------------------------------------------------------------
  // 4) Disable providers (hide/remove them even if credentials exist)
  // ---------------------------------------------------------------------------
  "disabled_providers": [
    // "openai",
    // "gemini"
  ],

  // ---------------------------------------------------------------------------
  // 6) Agents
  // ---------------------------------------------------------------------------
  "default_agent": "build",

  // Custom agents must be defined inline under the "agent" object.
  // NOTE: {file:...} macros only work for string fields (e.g. "prompt"), not for
  // importing an agent object.
